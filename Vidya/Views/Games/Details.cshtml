@model Vidya.Models.Game

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Console: @Model.Console.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("MMMM dd, yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

